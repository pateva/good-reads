@page "{id:int}"
@model GoodReads.Pages.BookGenres.DetailsModel

@{
    ViewData["Title"] = Model.Genre?.GenreName ?? "Genre Details";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>@Model.Genre?.GenreName</h2>
</div>
<hr />

@if (Model.Books.Any())
{
    <div class="row">
        @foreach (var book in Model.Books)
        {
            <div class="col-md-4 mb-3">
                <button type="button" class="btn btn-outline-primary w-100"
                        data-bs-toggle="modal" data-bs-target="#bookModal"
                        onclick="loadBookDetails(@book.Id, '@book.Name')">
                    @book.Name
                </button>
            </div>
        }
    </div>
}
else
{
    <p>No books found for this genre.</p>
}

