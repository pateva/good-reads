@page
@model GoodReads.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Book[0].Name)</th>
            <th>Author</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Book)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (item.AuthorBooks?.Any() == true)
                    {
                        <ul>
                            @foreach (var authorBook in item.AuthorBooks)
                            {
                                <li>
                                    @authorBook.Author.FirstName
                                    @authorBook.Author.LastName
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    @if (item.BookGenres?.Any() == true)
                    {
                        <ul>
                            @foreach (var bookGenre in item.BookGenres)
                            {
                                <li>@bookGenre.Genre.GenreName</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
